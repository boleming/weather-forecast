.bgc {
	background-image: linear-gradient(#014f35, #83da7c);
	height: 100vh;
}

.today {
	padding-top: 20rpx;
}

.info {
	padding: 20px;
	background-color: rgba(0, 0, 0, .5);
	box-shadow: 10px 10px 20px rgba(0, 0, 0, .5);
}

.temp {
	font-size: 50px;
	text-align: center;
}

.weather {
	text-align: center;
}

.city {
	color: white;
	font-size: 16px;
	text-align: right;
	margin-right: 10rpx;
	margin-top: 30rpx;
}

/* 搜索框样式 */
.inoput-row {
	width: 90%;
	margin: 15rpx auto;
	border-top: 1px solid #e5e5e5;
	border-bottom: 1px solid #e5e5e5;
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 88rpx;
	background-color: #fff;
	font-size: 34rpx;
	color: #000;
	border-radius: 5px;
}

.inoput-row>input {
	margin-left: 20rpx;
	flex: 1;
}

button[type='primary'] {
  width: 200rpx;
  height: 92rpx;
	margin: 30rpx auto;
}

.future {
	padding-top: 20rpx;
	display: flex;
	justify-content: space-around;
	height: 390rpx;
	background-color: rgba(0, 0, 0, .3);
	box-shadow: 10px 10px 20px rgba(0, 0, 0, .5);
	font-size: 24rpx;
}
.future-item{
  padding:0 20rpx;
  height: 90%;
	border:1px solid #bdd5bd;
	border-radius: 3px;
}
